
@{
    ViewData["Title"] = "Equipment Request Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>EquipmentRequest</h1>

<form>
    <div class="form-group">
        <label for="nameForm">Full Name</label>
        <input type="text" class="form-control" id="nameForm" placeholder="First and Last Name">
    </div>
    <div class="form-group">
        <label for="emailForm">Email address</label>
        <input type="email" class="form-control" id="emailForm" placeholder="name@example.com">
    </div>
    <div class="form-group">
        <label for="phoneForm">Phone Number</label>
        <input type="number" class="form-control" id="phoneForm" placeholder="(XXX)-XXX-XXXX">
    </div>

    <div class="form-group">
        <label for="roleSelect">Role</label>
        <select class="form-control" id="roleSelect">
            <option>Student</option>
            <option>Professor</option>
        </select>
    </div>
    <div class="form-group">
        <label for="equipmentSelect">Equipment</label>
        <select multiple class="form-control" id="equipmentSelect">
            <option>Laptop</option>
            <option>Phone</option>
            <option>Tablet</option>
            <option>Another</option>
        </select>
    </div>
    <div class="form-group">
        <label for="requestReason">Example textarea</label>
        <textarea class="form-control" id="requestReason" rows="3"></textarea>
    </div>
    <div class="form-group">
        <label for="dateForm">Duration</label>
        <input type="number" class="form-control" id="dateForm" placeholder="How Many Days Are You Requesting?">
    </div>
</form>